<div class="container mx-auto mt-10">
  <div class="flex flex-wrap justify-center">
    <%= link_to new_gift_suggestion_path, class: "w-full md:w-1/3 lg:w-1/3 p-10 lg:p-20 m-4 text-center bg-blue-400 text-white font-bold rounded hover:bg-blue-500 transition-colors", data: { turbo: false } do %>
      <div class="font-bold text-xl mb-2"><%=  t('.consult_ai') %></div>
      <p class="text-base"><%= t('.ai_description') %></p>
    <% end %>
    <%= link_to wish_lists_path, class: "w-full md:w-1/3 lg:w-1/3 p-10 lg:p-20 m-4 text-center bg-green-400 text-white font-bold rounded hover:bg-green-500 transition-colors", data: { turbo: false } do %>
      <div class="font-bold text-xl mb-2"><%=  t('.wish_list') %></div>
      <p class="text-base"><%= t('.list_description') %></p>
    <% end %>
  </div>
  <div class="flex flex-wrap justify-center">
    <%= link_to memos_path, class: "w-full md:w-1/3 lg:w-1/3 p-10 lg:p-20 m-4 text-center bg-yellow-400 text-white font-bold rounded hover:bg-yellow-500 transition-colors", data: { turbo: false } do %>
      <div class="font-bold text-xl mb-2"><%= t('.memo_function') %></div>
      <p class="text-base"><%= t('.memo_description') %></p>
    <% end %>
    <%= link_to new_message_card_path, class: "w-full md:w-1/3 lg:w-1/3 p-10 lg:p-20 m-4 text-center bg-orange-400 text-white font-bold rounded hover:bg-orange-500 transition-colors", data: { turbo: false } do %>
      <div class="font-bold text-xl mb-2"><%=  t('.message_card') %></div>
      <p class="text-base"><%= t('.card_description') %></p>
    <% end %>
  </div>
</div>