<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold text-center mb-6">ギフト提案履歴</h1>

  <div class="space-y-4">
    <% @gift_suggestions.each do |gift_suggestion| %>
      <div class="bg-white shadow-md rounded-lg p-4">
        <div class="grid grid-cols-2 gap-4">
          <div><strong>相談日時:</strong> <%= gift_suggestion.created_at.strftime("%Y/%m/%d %H:%M") %></div>
          <div><strong>年齢:</strong> <%= gift_suggestion.age %></div>
          <div><strong>性別:</strong> <%= gift_suggestion.gender == 1 ? '男性' : '女性' %></div>
          <div><strong>職業:</strong> <%= gift_suggestion.business %></div>
          <div><strong>趣味:</strong> <%= gift_suggestion.hobbies.join(", ") %></div>
          <div><strong>興味:</strong> <%= gift_suggestion.interest %></div>
          <div><strong>プレゼント目的:</strong> <%= gift_suggestion.purpose %></div>
          <div><strong>関係性:</strong> <%= gift_suggestion.relationship %></div>
          <div class="col-span-2"><strong>提案された商品:</strong> <%= gift_suggestion.result %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
