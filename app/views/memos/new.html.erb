<div class="container max-w-md mx-auto ">
  <h1 class="mb-5 text-4xl text-center">memo作成</h1>
  <%= form_with model: @memo, url: user_memos_path(current_user), local: true, class: "w-96 mx-auto p-6 bg-white rounded-lg shadow-md" do |f| %>
    <%= render 'form_fields', f: f %>
    <div class="flex items-center justify-between">
      <%= f.submit "作成", class: " mx-auto bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>