<div class="container mx-auto p-4">
  <div class="flex justify-center mb-10">
    <div class="flex items-center">
      <h1 class="text-2xl font-bold"><%= t('.title') %></h1>
      <%= link_to t('.create'),new_user_message_card_path(current_user), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded focus:outline-none focus:shadow-outline ml-4" %>
    </div>
  </div>

  <div class="mt-4 mb-10 overflow-auto">
    <table class="min-w-full table-auto bg-white rounded-lg shadow">
      <thead class="bg-gray-200">
        <tr>
          <th class="px-4 py-2 text-left">宛名</th>
          <th class="px-4 py-2 text-left">メッセージ</th>
          <th class="px-4 py-2 text-left">背景画像</th>
        </tr>
      </thead>
      <tbody>
        <% @message_cards.each do |message_card| %>
          <tr class="hover:bg-gray-100">
            <td class="border px-4 py-2"><%= message_card.recipient_name %></td>
            <td class="border px-4 py-2"><%= message_card.message%></td>
            <td class="border px-4 py-2">
              <div class="flex justify-between items-center">
                <span class="mb-2 sm:mb-0"><%= message_card.background_image%></span>
                <div class="flex items-center">
                  <%= link_to edit_user_message_card_path(current_user, message_card), class: "text-green-500 hover:text-green-700 mr-2" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                    </svg>
                  <% end %>
                  <%= link_to  user_message_card_path(current_user, message_card), data: { turbo_method: :delete, turbo_confirm: t('.confirm') }, class: "text-red-500 hover:text-red-700" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                     <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>      
      </tbody>
    </table>
  </div>
</div>